# http://editorconfig.org
root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_style = tab
tab_width = 4
indent_size = tab

[*.php]
indent_style = tab
tab_width = 4
indent_size = tab

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2
